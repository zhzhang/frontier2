generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  email          String        @unique
  id             String        @id
  name           String?
  articles       Article[]
  memberships    Membership[]
  reviews        Review[]
  Organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
}

model Article {
  id       String   @id @default(cuid())
  title    String
  abstract String
  authors  User[]
  url      String
  reviews  Review[]
}

model Organization {
  id          String       @id @default(cuid())
  name        String
  description String?
  admins      User[]
  venues      Venue[]
  memberships Membership[]
}

model Membership {
  id             String       @id @default(cuid())
  user           User         @relation(fields: [userId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
  role           String
  userId         String
  organizationId String
}

model Venue {
  id             String       @id @default(cuid())
  name           String
  description    String?
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  Review         Review[]
}

model Review {
  id        String  @id @default(cuid())
  body      String
  article   Article @relation(fields: [articleId], references: [id])
  author    User    @relation(fields: [userId], references: [id])
  venue     Venue?  @relation(fields: [venueId], references: [id])
  articleId String
  userId    String
  venueId   String?
}
